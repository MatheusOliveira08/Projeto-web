        @if(!auth.isLoggedIn)
            <div class="cabecalho-menu">
                <a class="cabecalho-menu-link" href="{{ route('auth.login') }}"> Login </a>
                <a class="cabecalho-menu-link" href="{{ route('auth.create') }}"> Cadastre-se </a>
            </div>        
        @end
    </header>
    <nav id="menu" class="nav-menu-lateral">
        <a class="menu-lateral-link" onclick="fecharMenu()" href="#"> <img src="{{ asset('assets/images/icons/close.svg') }}"> Fechar </a>  
        <hr class="hr-1">
        <a class="menu-lateral-link" href="{{ route('videos.index')}}"> <img src="{{ asset('assets/images/icons/home.svg') }}"> Início </a> 
        <a class="menu-lateral-link" href="#"> <img src="{{ asset('assets/images/icons/library.svg') }}"> Biblioteca </a> 
        <a class="menu-lateral-link" href="#"> <img src="{{ asset('assets/images/icons/historic.svg') }}"> Histórico  </a>
        <hr class="hr-2">
    </nav>
    <div id="conteudo" class="main">
        <div class="show">
            <iframe width="560" height="315" src="{{video.link}}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
        </div>   
        <div class="show">
            <label> Título:</label>
            {{ video.titulo }}
        </div>
        <div class="show">
            <label> Descrição:</label>
            {{ video.description }}
        </div>
        <p></p>  
    </div>
    <script>
        function abrirMenu(){
            document.getElementById('menu').style.width = '250px';
        }
        function fecharMenu(){
            document.getElementById('menu').style.width = '0';
        }
    </script>  
</body>
</html>